<?xml version="1.0" encoding="utf-8"?>
<com.hexinnovation.flashlight.MyScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bg_2">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginRight="@dimen/padding"
            android:id="@+id/theme_title"
            android:text="@string/theme_title"
            android:textSize="@dimen/notification_title_text_size"/>
        <com.hexinnovation.flashlight.ThemeSelector
            android:id="@+id/theme_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/power_cycle_switch_parent">
        </FrameLayout>
        <TextView
            android:id="@+id/notification_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginRight="@dimen/padding"
            android:textSize="@dimen/notification_title_text_size"
            android:text="@string/notification_title"
            android:includeFontPadding="false"
            />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="fill_horizontal"
            android:id="@+id/light_radios"
            android:layout_marginBottom="-6dp"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="fill_horizontal"
            android:id="@+id/dark_radios"
            android:layout_marginBottom="-6dp" />
    </LinearLayout>
</com.hexinnovation.flashlight.MyScrollView>
